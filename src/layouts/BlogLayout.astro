---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter&family=Sora:wght@600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white dark:bg-black text-gray-900 dark:text-white font-sans">
    <slot />
  </body>
</html>
