---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Sora:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body
    class="bg-white dark:bg-black text-gray-900 dark:text-white transition-colors font-sans"
  >
    <slot />
  </body>
</html>
