---
import Github from "../assets/github.astro";
import { projects } from "../constants";
---

<div class="flex-between-center mb-4">
  <h4 class="text-lg font-semibold">Recent Projects</h4>
  <a
    href="/projects"
    class="underline text-blue-400 text-sm hover:text-blue-300">View all</a
  >
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  {
    projects.map((project) => (
      <div class="block bg-zinc-900 border border-zinc-700 rounded-lg p-4 hover:border-blue-500 transition-all">
        <div class="flex justify-between items-center mb-3">
          <a
            href={project.link}
            target="_blank"
            class="text-md font-semibold cursor-pointer"
          >
            {project.title}
          </a>
          <span class="text-xs text-zinc-400">{project.date}</span>
        </div>
        <div class="flex-between-center">
          <div class="flex flex-wrap gap-2">
            {project.tech.map((tech) => (
              <span class="text-xs bg-zinc-800 px-2 py-1 rounded hover:bg-zinc-700 transition-all cursor-pointer">
                #{tech}
              </span>
            ))}
          </div>
          <Github link={project.repo_link} />
        </div>
      </div>
    ))
  }
</div>
