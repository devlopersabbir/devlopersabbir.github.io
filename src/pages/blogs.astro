---
import moment from "moment";
import RootLayout from "../layouts/blog-layout.astro";
const posts = Object.values(
  import.meta.glob("../articles/*.md", { eager: true })
);
posts.map((post: any) => console.log(post));
---

<RootLayout>
  <section class="recent-articles my-5">
    <div class="flex-col gap-1">
      {
        posts.map((post: any) => (
          <div class="flex-between-center mt-2">
            <div class="flex font-medium">
              <a href={post.url || ""} class="hover:text-zinc-200">
                {post.frontmatter.title}
              </a>
              <span class="px-2 md:visible sm:flex hidden">-</span>
              <div class="gap-1 mask-r-from-70% sm:flex hidden">
                {post.frontmatter.tags.map((tag: any) => (
                  <span class="bg-zinc-800 px-1 py-0.5 rounded-sm cursor-pointer hover:bg-zinc-700 transition-all">
                    #{tag}
                  </span>
                ))}
              </div>
            </div>
            <span class="text-zinc-300">
              {moment(post.frontmatter.pubDate).format("ll")}
            </span>
          </div>
        ))
      }
    </div>
  </section>
</RootLayout>
