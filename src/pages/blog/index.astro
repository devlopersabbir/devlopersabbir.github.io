---
import BlogLayout from "../../layouts/BlogLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<BlogLayout title="Blog â€“ Sabbir Hossain">
  <section class="max-w-3xl mx-auto py-16 px-4">
    <h1 class="text-4xl font-bold mb-8">My Articles</h1>
    <ul class="space-y-8">
      {
        posts.map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}/`}
              class="text-2xl text-indigo-600 font-semibold hover:underline"
            >
              {post.data.title}
            </a>
            <p class="text-sm text-gray-500">{post.data.pubDate}</p>
            <p class="text-gray-700 dark:text-gray-300 mt-1">
              {post.data.description}
            </p>
          </li>
        ))
      }
    </ul>
  </section>
</BlogLayout>
