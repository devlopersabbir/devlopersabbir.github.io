---
import HeroSection from "../components/hero-section.astro";
import RecentBlog from "../components/recent-blog.astro";
import RecentProjects from "../components/recent-project.astro";
import RecentYoutube from "../components/recent-youtube.astro";
import RootLayout from "../layouts/root-layout.astro";
---

<RootLayout pageTitle="Personal Portfolio website">
  <section
    class="hero-section flex flex-col-reverse md:flex-row md:items-center gap-6 content-layout"
  >
    <HeroSection />
  </section>
  <section class="recent-projects content-layout">
    <RecentProjects />
  </section>
  <section class="recent-articles content-layout">
    <RecentBlog />
  </section>
  <section class="recent-youtube-video content-layout">
    <RecentYoutube />
  </section>
</RootLayout>
