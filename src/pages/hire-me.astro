---
import RootLayout from "../layouts/root-layout.astro";
import { galleryImages } from "../constants";
const selectedImages = [...galleryImages].sort(() => 0.5 - Math.random());
// const selectedImages = shuffled.slice(0, 3);
console.log(`https://formspree.io/f/${import.meta.env.FORMSPREE_KEY}`);
---

<RootLayout pageTitle="Hire Me">
  <section class="my-5 flex-center flex-col md:flex-row gap-4 items-stretch">
    <!-- Image Gallery -->
    <!-- Image Gallery -->
    <div
      class="image-gallery flex-1 columns-2 md:columns-3 gap-2 space-y-2 overflow-y-auto"
    >
      {
        selectedImages.map((src, i) => (
          <img
            src={src}
            alt={`Image ${i + 1}`}
            class="w-full rounded object-cover break-inside-avoid"
            loading="lazy"
          />
        ))
      }
    </div>

    <!-- Contact Form -->
    <div
      class="flex-1 bg-zinc-900 p-8 rounded-lg shadow-xl max-h-[700px] overflow-y-auto"
    >
      <h1 class="text-3xl font-bold mb-4 text-center text-blue-400">
        Let's Work Together
      </h1>
      <p class="text-zinc-300 mb-6 text-center text-sm">
        I'm currently available for freelance or full-time remote work. Fill out
        the form and I'll get back to you shortly.
      </p>

      <form class="space-y-6">
        <div>
          <label for="name" class="block text-sm mb-1">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 rounded bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Your full name"
          />
        </div>

        <div>
          <label for="email" class="block text-sm mb-1">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 rounded bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="you@example.com"
          />
        </div>

        <div>
          <label for="message" class="block text-sm mb-1">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-2 rounded bg-zinc-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-400"
            placeholder="Tell me about your project..."></textarea>
        </div>

        <button
          type="submit"
          onclick="alert('This service is not avaiable at that moment!')"
          class="w-full py-3 rounded bg-blue-500 hover:bg-blue-400 transition-colors text-white font-semibold cursor-pointer"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>
</RootLayout>
